{
  "name": "build-android",
  "version": "0.1.0",
  "private": true,
  "description": "A Github Action that builds an Android app using Gradle",
  "main": "lib/index.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build",
    "all": "npm run build && npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shapehq/actions.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/glob": "^0.5.0",
    "shell-quote": "^1.8.3",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@actions/github": "^6.0.1",
    "@types/node": "^24.0.0",
    "@types/shell-quote": "^1.7.5",
    "@typescript-eslint/parser": "^8.34.0",
    "@vercel/ncc": "^0.38.3",
    "eslint": "^9.28.0",
    "eslint-plugin-github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
